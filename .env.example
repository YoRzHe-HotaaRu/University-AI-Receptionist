# University AI Receptionist - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# Required: OpenRouter API Configuration
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# Optional: Model Configuration
# =============================================================================
# Default: qwen/qwen3.5-flash-02-23
MODEL_NAME=qwen/qwen3.5-flash-02-23

# =============================================================================
# Optional: Server Configuration
# =============================================================================
# Flask debug mode (set to True for development)
FLASK_DEBUG=False

# Server port
PORT=5000

# =============================================================================
# Optional: Security Configuration
# =============================================================================
# Generate a secure secret key: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your_secret_key_here

# CORS origins (comma-separated list of allowed origins)
# For development: http://localhost:5000,http://127.0.0.1:5000
# For production: your actual domain
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# =============================================================================
# Optional: Application Settings
# =============================================================================
# Maximum message length (characters)
MAX_MESSAGE_LENGTH=1000

# Maximum messages to keep in context
MAX_MESSAGES_CONTEXT=10

# Rate limit (requests per minute per IP)
RATE_LIMIT=30

# Memory directory path
MEMORY_DIR=memory

# HTTP referer for OpenRouter API
HTTP_REFERER=http://localhost:5000

# Application title for OpenRouter
APP_TITLE=University AI Receptionist

# =============================================================================
# Optional: MiniMax TTS Configuration
# =============================================================================
# Get your API key from https://platform.minimax.io
MINIMAX_API_KEY=your_minimax_api_key_here

# TTS model (default: speech-2.6-turbo)
MINIMAX_TTS_MODEL=speech-2.6-turbo

# Voice ID (default: moss_audio_f942350f-133e-11f1-8c62-b61f19f976ea)
MINIMAX_TTS_VOICE_ID=moss_audio_f942350f-133e-11f1-8c62-b61f19f976ea

# Language code (ms=Malay, en=English, etc.)
MINIMAX_TTS_LANGUAGE=ms
